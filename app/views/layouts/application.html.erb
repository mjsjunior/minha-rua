
<!DOCTYPE html lang="pt-BR">
<html>
<head>
 
 <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
 <%= yield :opg %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= analytics_init if GoogleAnalytics.valid_tracker? %>
</head>
<body>
	<nav class="navbar navbar-default">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/#!" style="padding-top:7px;"><img src="/assets/images/minha-rua-logo.png" alt=""></a>
	    </div>
	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-right">
	        <li><input type="text" id="city-input-nav" class="hidden-xs" placeholder="Digite sua cidade..."></li>
			<li class="menu-add hidden-xs"> <%= link_to('Criar Reclamação', reclamacao_nova_path)  %>  </li>
			<% if controller.controller_name == 'home' %>
			  	<% @categories.each do |category| %>
	              <li class="visible-xs">
	                <a href="#!" class="hide-nav filter-category <%=raw "#{category.tag}"%>"  data-tag="<%=raw "#{category.tag}"%>"> <%= category.title %></a>
	              </li>
	            <% end %>
			<% end %>
            <li class="dropdown">
                <a <%= current_user ? 'href=# class=dropdown-toggle data-toggle=dropdown' : 'href=/users/sign_in' %> >
                    <span class="glyphicon glyphicon-user"></span>
                    <strong> <%= current_user ? current_user.first_name : "Login" %></strong>
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <div class="navbar-login">
                            <div class="row">
                                <div class="col-lg-4">
                                    <p class="text-center">
                                        <span class="glyphicon glyphicon-user icon-size"></span>
                                    </p>
                                </div>
                                <div class="col-lg-8">
                                    <p class="text-left"><strong><%= current_user ? current_user.first_name : "Login" %></strong></p>
                                    <p class="text-left small"><%= current_user ? current_user.email : "Login" %></p>
                                    <p class="text-left">
                                        <a href="#" class="btn btn-primary btn-block btn-sm">Profile</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider navbar-login-session-bg"></li>
			            <li><a href="<%=raw complaints_path %>">Minhas reclamações <span class="fa fa-bullhorn pull-right"></span></a></li>
			            <li class="divider"></li>
			            <li><a href="<%=raw liked_complaints_path %>">Reclamações apoiadas <span class="glyphicon glyphicon-heart pull-right"></span></a></li>
			            <li class="divider"></li>
			            <li><a href="<%=raw logout_user_path %>">Sair <span class="glyphicon glyphicon-log-out pull-right"></span></a>
			        </li>
                </ul>
            </li>
	      </ul>

	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
	<main class="<%= controller.controller_name %> <%= controller.action_name %>">
		<%= yield %>
	</main>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCORWu-uTguiEdLaTvsFu74TPvmYE2fNrA&callback=initMap">
    </script>
</body>
</html>
