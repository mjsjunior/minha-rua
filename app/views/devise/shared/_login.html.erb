<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
	  <%= f.email_field :email, autofocus: true,:class => "form-control",:placeholder=>"Digite seu e-mail"%>
	</div>

	<div class="form-group">
	  <%= f.password_field :password, autocomplete: "off" ,:class => "form-control",:placeholder=>"Digite sua senha"%>
	</div>

	<% if devise_mapping.rememberable? -%>
	  <div class="form-group">
	    <%= f.check_box :remember_me %>
	    <%= f.label :remember_me , "Mantenha-me conectado"%>
	  </div>
	<% end -%>

	<div class="actions">
	  <%= f.submit "Entrar", :class => 'btn btn-primary green' %>
	</div>
<% end %>