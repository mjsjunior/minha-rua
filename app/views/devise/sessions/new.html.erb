<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <% flash.each do |type, message| %>
          <div class="alert alert-<%= type %> fade in">
              <button class="close" data-dismiss="alert">Ã—</button>
              <%= message %>
          </div>
      <% end %>
      <h2 class="title">Login</h2>
      <%= link_to "Entrar com Facebook", user_facebook_omniauth_authorize_path,:class => 'btn btn-primary'%>
      <hr>
      <%= render "devise/shared/login" %>
        <div class="links">
        <%= link_to "Criar conta", new_registration_path(resource_name) %>
        <%= link_to "Esqueceu sua senha ?", new_password_path(resource_name) %>
        </div> 
    </div>
  </div>
</div>

